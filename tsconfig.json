{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "es6",
    "esModuleInterop": true,
    "noEmit": true,
    "sourceMap": true,
    "paths": {
      "@mmomtchev/ffmpeg": [
        "."
      ],
      "@mmomtchev/ffmpeg/stream": [
        "./stream"
      ]
    },
    "plugins": [
      {
        "transform": "./src/undebug.js"
      }
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs"
    }
  },
  "include": [
    "src/lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
