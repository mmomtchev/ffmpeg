{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "lib",
    "declaration": true,
    "paths": {
      "node-ffmpeg": [
        "./lib"
      ],
      "node-ffmpeg/stream": [
        "./lib/Stream"
      ]
    }
  },
  "include": [
    "src/lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
