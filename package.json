{
  "name": "node-ffmpeg",
  "version": "1.0.0",
  "description": "avcpp (ffmpeg) bindings for Node.js",
  "main": "lib/index.js",
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build",
    "test": "npx mocha",
    "lint": "clang-format -i src/*.cc && eslint --fix lib/*.[jt]s test/*.[jt]s",
    "preversion": "npm run lint && npm run test",
    "postversion": "git push && git push --tags && node ./scripts/publish-packages.js",
    "postpublish": "gh workflow run test-package.yml -F version=$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/node-ffmpeg.git"
  },
  "keywords": [
    "node.js",
    "ffmpeg",
    "video",
    "encoding",
    "codec"
  ],
  "binary": {
    "module_name": "node-ffmpeg",
    "module_path": "./lib/binding/{platform}-{arch}",
    "remote_path": "v{version}",
    "host": "https://github.com/mmomtchev/node-ffmpeg/releases/download/",
    "package_name": "{platform}-{arch}.tar.gz",
    "hosting": {
      "provider": "github",
      "repo": "mmomtchev/node-ffmpeg"
    }
  },
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mmomtchev/node-ffmpeg/issues"
  },
  "homepage": "https://github.com/mmomtchev/node-ffmpeg#readme",
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11",
    "nobind17": "^1.1.0",
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@octokit/core": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.9.4",
    "chai": "^4.3.10",
    "magickwand.js": "^1.0.0-beta.6",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  }
}
